<!DOCTYPE HTML>
<html>
<header>
  <title> Steam URL Parser </title>
    <%- include('../partials/navbar.ejs') %>
</header>

<body>

  <div class="page-header" align="center">
     <h1>My Servers</h1>
  </div><!-- /page-header -->

  <div class="container" align="center">

    <% if (results.length === 0) { %>
      No entries yet!
    <% } else { %>
      <% results.forEach(function(result) { %>
        <%= result.serverName %> - <%= result.ip %>:<%= result.port %>,
        <a href="/go?uniqueKey=<%= result.uniqueKey %>">View</a>,
        <a href="/delete?uniqueKey=<%= result.uniqueKey %>">Delete</a> <br> 
      <% }); %>
    <% } %>

  </div><!-- /container -->

</body>
</html>